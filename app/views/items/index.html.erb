<div class="container mt-4 mx-10">
  <h1 class="text-center mb-4 text-light">Meus Items</h1>
  <!-- botÃ£o p/ Lista de compras-->
  <div class="text-center">
    <%= link_to "Lista de Compras", grocery_list_path, class: "btn btn-primary" %>
  </div>


  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <label for="category_filter">Filtrar por categoria</label>
      <select id="category_filter" class="form-select">
        <option value="">Todas as categorias</option>
        <% @categories.each do |category| %>
          <option value="<%= category.id %>" <%= 'selected' if params[:category_id].to_i == category.id %>><%= category.name %></option>
        <% end %>
      </select>
    </div>

    <div class="ms-2">
      <span id="sort_by" class="badge text-bg-success fs-6" aria-expanded="false">
        Quantidade
        <i id="sort_icon" class="fas fa-sort"></i>
      </span>
    </div>
  </div>

  <div class="row">
    <% @user_items.each do |user_item| %>
      <% item = user_item.item %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= item.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Category: <%= item.category.name %></h6>
            <p class="card-text">Quantity: <span id="quantity-<%= user_item.id %>"><%= user_item.quantity %></span></p>
            <div class="d-flex justify-content-between">
              <%= button_to grocery_list_items_path(item_id: user_item.item.id), method: :post, class: 'btn btn-info btn-sm', data: { turbo_action: 'replace' } do %>
                <i class="fa-solid fa-cart-plus"></i>
              <% end %>

              <%= button_to '+', user_items_path(user_item_id: user_item, item_id: item, quantity: 1), method: :post, class: 'btn btn-primary btn-sm', data: { turbo_action: 'replace' } %>
              <%= button_to '-', user_item_path(user_item), method: :put, params: { quantity: -1 }, class: 'btn btn-secondary btn-sm', data: { turbo_action: 'replace' } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  document.getElementById('category_filter').addEventListener('change', function() {
    const categoryId = this.value;
    const urlParams = new URLSearchParams(window.location.search);
    urlParams.set('category_id', categoryId);
    window.location.search = urlParams.toString();
  });

  document.getElementById('sort_by').addEventListener('click', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const currentDirection = urlParams.get('sort_direction') || 'asc';
    const newDirection = currentDirection === 'asc' ? 'desc' : 'asc';

    urlParams.set('sort_by', 'quantity');
    urlParams.set('sort_direction', newDirection);
    window.location.search = urlParams.toString();
  });

  document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const direction = urlParams.get('sort_direction') || 'asc';
    const icon = document.getElementById('sort_icon');

    if (direction === 'asc') {
      icon.classList.remove('fa-sort-down');
      icon.classList.add('fa-sort-up');
    } else {
      icon.classList.remove('fa-sort-up');
      icon.classList.add('fa-sort-down');
    }
  });
</script>