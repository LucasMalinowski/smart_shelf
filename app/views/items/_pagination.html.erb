<div id="inventory_pagination" class="mt-4 flex justify-center">
  <% if next_page.present? %>
    <% url_params = request_params.deep_dup %>
    <% url_params[:page] = next_page %>
    <% url = url_for(url_params.merge(format: :turbo_stream)) %>
    <div data-controller="load-more" data-load-more-url-value="<%= url %>" class="inline-flex items-center gap-2 rounded-full border border-ink-200/70 bg-white px-4 py-2 text-xs font-semibold text-ink-500 shadow-soft dark:border-white/10 dark:bg-surface-800/80 dark:text-slate-300">
      <span>Carregando itens...</span>
    </div>
  <% else %>
    <div class="text-xs text-ink-400 dark:text-slate-500">Lista completa.</div>
  <% end %>
</div>
