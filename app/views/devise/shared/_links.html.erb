<div class="mt-6 space-y-2 text-sm">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Já possui conta? Entrar", new_session_path(resource_name), class: "inline-flex items-center gap-2 text-ink-500 transition hover:text-ink-900 dark:text-slate-300 dark:hover:text-white" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Criar uma conta", new_registration_path(resource_name), class: "inline-flex items-center gap-2 text-ink-500 transition hover:text-ink-900 dark:text-slate-300 dark:hover:text-white" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "inline-flex items-center gap-2 text-ink-500 transition hover:text-ink-900 dark:text-slate-300 dark:hover:text-white" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Reenviar instruções de confirmação", new_confirmation_path(resource_name), class: "inline-flex items-center gap-2 text-ink-500 transition hover:text-ink-900 dark:text-slate-300 dark:hover:text-white" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Reenviar instruções de desbloqueio", new_unlock_path(resource_name), class: "inline-flex items-center gap-2 text-ink-500 transition hover:text-ink-900 dark:text-slate-300 dark:hover:text-white" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <div class="pt-2">
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "w-full rounded-full border border-ink-200 px-4 py-2 text-center font-semibold text-ink-600 transition hover:bg-surface-100 hover:text-ink-900 dark:border-white/10 dark:text-slate-300 dark:hover:bg-white/10 dark:hover:text-white" %>
      <% end %>
    </div>
  <% end %>
</div>
