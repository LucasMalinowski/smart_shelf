<% suggestions = suggested_inventory_items %>
<% if suggestions.any? %>
  <section class="space-y-4">
    <div class="flex items-center justify-between">
      <div>
        <h2 class="text-xl font-semibold text-ink-900 dark:text-white">Sugestões inteligentes</h2>
        <p class="text-xs text-ink-400 dark:text-slate-400">Itens abaixo do limite, críticos ou próximos do vencimento</p>
      </div>
    </div>
    <div class="grid gap-4 md:grid-cols-2 xl:grid-cols-3">
      <% suggestions.each do |inventory| %>
        <div class="flex flex-col justify-between gap-4 rounded-3xl border border-white/15 bg-white/80 p-5 shadow-soft dark:border-white/10 dark:bg-surface-800/80">
          <div class="flex items-start justify-between">
            <div class="flex flex-col gap-1">
              <span class="text-sm font-semibold text-ink-900 dark:text-white"><%= inventory.item.name %></span>
              <span class="text-xs text-ink-400 dark:text-slate-400"><%= inventory.item.category.name %></span>
              <% if inventory.suggestion_label.present? %>
                <span class="mt-2 inline-flex items-center gap-1 rounded-full bg-warning/10 px-3 py-1 text-[0.65rem] font-semibold uppercase tracking-wide text-warning dark:bg-warning/20 dark:text-warning"> <%= inventory.suggestion_label %> </span>
              <% end %>
            </div>
            <%= button_to grocery_list_items_path(item_id: inventory.item.id, quantity: unit_step_value(inventory)),
                method: :post,
                class: "inline-flex items-center gap-2 rounded-full bg-primary-600 px-4 py-2 text-xs font-semibold text-white shadow-soft transition hover:-translate-y-0.5 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-200" do %>
              Adicionar
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4">
                <path d="M5 6h14" />
                <path d="M7 10h10" />
                <path d="M9 14h6" />
              </svg>
            <% end %>
          </div>
          <div class="flex flex-col gap-2 rounded-2xl bg-white/60 p-4 text-xs text-ink-500 dark:bg-white/5 dark:text-slate-300">
            <div class="flex items-center justify-between">
              <span>Em estoque</span>
              <span class="font-semibold text-ink-700 dark:text-white"><%= format_quantity(inventory) %></span>
            </div>
            <% if inventory.minimum_quantity.present? %>
              <div class="flex items-center justify-between">
                <span>Limiar</span>
                <span class="font-semibold"><%= format_measurement(inventory.minimum_quantity, inventory) %></span>
              </div>
            <% end %>
            <% if inventory.critical_quantity.present? %>
              <div class="flex items-center justify-between">
                <span>Crítico</span>
                <span class="font-semibold"><%= format_measurement(inventory.critical_quantity, inventory) %></span>
              </div>
            <% end %>
            <% if inventory.expires_at.present? %>
              <div class="flex items-center justify-between">
                <span>Expira</span>
                <span class="font-semibold"><%= l(inventory.expires_at.to_date, format: :short) %></span>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
<% else %>
  <section class="rounded-3xl border border-dashed border-ink-200/70 bg-white/60 p-6 text-sm text-ink-400 dark:border-white/10 dark:bg-surface-800/60 dark:text-slate-300">
    <span>Sem alertas no momento. Continue acompanhando o estoque para receber sugestões aqui.</span>
  </section>
<% end %>
